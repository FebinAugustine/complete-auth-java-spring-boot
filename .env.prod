# ----------------------------------------
# Server
# ----------------------------------------
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# ----------------------------------------
# Database (production MySQL â€” managed instance or RDS)
DB_HOST=prod-db-host.example.com
DB_PORT=3306
DB_NAME=authdb
DB_USERNAME=auth_user
DB_PASSWORD=super_strong_password_here

# Or optionally supply full DB URL instead of separate vars:
# DB_URL=jdbc:mysql://prod-db-host.example.com:3306/authdb?useSSL=true&serverTimezone=UTC

# ----------------------------------------
# JWT secrets (must be rotated & kept in secret manager)
JWT_SECRET=prod_secret_key_replace_with_64chars_minimum________________________________
JWT_ACCESS_TOKEN_VALIDITY_MS=900000
JWT_REFRESH_TOKEN_VALIDITY_MS=604800000

# ----------------------------------------
# Cookies (strict & secure in prod)
APP_COOKIE_SECURE=true
APP_COOKIE_SAMESITE=Strict

# ----------------------------------------
# OAuth2 (Google & GitHub real values from cloud console / GitHub app)
OAUTH2_GOOGLE_CLIENT_ID=your-prod-google-client-id
OAUTH2_GOOGLE_CLIENT_SECRET=your-prod-google-client-secret
OAUTH2_GITHUB_CLIENT_ID=your-prod-github-client-id
OAUTH2_GITHUB_CLIENT_SECRET=your-prod-github-client-secret

APP_OAUTH2_SUCCESS_REDIRECT=https://app.example.com/oauth-success
APP_BASE_URL=https://api.example.com

# ----------------------------------------
# Redis (HA/cluster endpoint for distributed rate limiting)
REDIS_URI=redis://prod-redis.example.com:6379
